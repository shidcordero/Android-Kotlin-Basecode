<resources>
    <!-- Application Splash Screen -->
    <style name="AppTheme.Launcher" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base Application Theme -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Orange Button Style -->
    <style name="AppTheme.ButtonOrange" parent="@style/TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minWidth">300dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Error on Field Style -->
    <style name="AppTheme.ErrorText" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorFieldError</item>
    </style>

</resources>
